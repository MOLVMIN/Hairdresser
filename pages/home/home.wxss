/* pages/home/home.wxss */

html, page, .main-container {
  height: 100%;
  background: #e9e9e9;
}

  .base-container {
  /* display: flex;
  justify-content: center;
  align-items: center; */
  position: relative;
  height: 460rpx;
  width: 100%;
  background-size:cover;
  background-position: center center;
  background-repeat: no-repeat;
  background-image: url(https://htl.mlww.info/images/f/69);
}

.user-info {
  margin:auto; 
  top: 0; right: 0; bottom: 0; left: 0;
  display: flex;
  display: -webkit-flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: absolute;
  z-index: 99;
}

.user-info-image {
  height: 200rpx;
  width: 200rpx;
  border-radius: 100rpx;
}

.user-info-text {
  margin-top: 20rpx;
  color: #fff;
  font-weight: 700;
}

.order-container {
  background: #fff;
}

.my-order, .my-voucher {
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 2rpx solid #e9e9e9;
  height: 120rpx;
  margin: 0 30rpx;
}

.order-title, .voucher-title {
  /*font-size: 40rpx;*/
  font-weight: 700;
}

.more text {
  font-size: 32rpx;
  color: #9a9a9a;
}

.more image {
  width: 16rpx;
  height: 27rpx;
  margin-left: 20rpx;
}

.sign {
  margin-left: 20rpx;
  height: 60rpx;
  width: 120rpx;
  line-height: 60rpx;
  text-align: center;
  color: #bf9e4d;
  border: 1rpx solid #bf9e4d;
  border-radius: 8rpx;
  font-size: 36rpx;
}

.signed {
  margin-left: 20rpx;
  height: 60rpx;
  width: 120rpx;
  line-height: 60rpx;
  text-align: center;
  color: #9a9a9a;
  border: 1rpx solid #9a9a9a;
  border-radius: 8rpx;
  font-size: 36rpx;
}

.order-menu {
  display: flex;
  align-items: center;
}

.menu-item {
  width: 25%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 30rpx 0;
}

.menu-item image {
  width: 70rpx;
  height: 70rpx;
}

.menu-item text {
  margin-top: 20rpx;
  font-size: 32rpx;
}

.voucher-container {
  display: flex;
  justify-content: center;
  align-items: center;
}

.voucher-count {
  width: 50rpx;
  height: 50rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #fff;
  border-radius: 25rpx;
  background: #f34b2f;
  margin-left: 10rpx;
  font-size: 40rpx;
}

.line {
  height: 20rpx;
  background: #e9e9e9;
}

.fans {
  color: #fff;
  margin-top: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.fans view {
  font-size: 30rpx;
  font-weight: normal;
}

.fans_left {
  padding-right: 30rpx;
}

.fans_right {
  padding-left: 30rpx;
  border-left: 1rpx solid white;
}

.works {
  padding: 30rpx;
}

.works_info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.works_title {
  font-size: 34rpx;
  font-weight: 700;
}

.works_more {
  display: flex;
  align-items: center;
}

.works_more view {
  font-size: 28rpx;
  color: #9a9a9a;
}

.works_more image {
  width: 20rpx;
  height: 20rpx;
  margin-left: 10rpx;
}

.works_show {
  /* display: flex;
  align-items: center;
  justify-content: space-between; */
  padding: 10rpx;
  padding-top: 20rpx;
  white-space: nowrap;
}

.works_show image {
  width: 100rpx;
  height: 100rpx;
  margin-right: 20rpx;
}

.insertline {
  height: 5rpx;
  background: #e9e9e9;
}

.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}

.modal-dialog {
  width: 540rpx;
  overflow: hidden;
  position: fixed;
  top: 50%;
  left: 0;
  z-index: 9999;
  background: #f9f9f9;
  margin: -180rpx 105rpx;
  border-radius: 36rpx;
}

.modal-title {
  padding-top: 30rpx;
  font-size: 36rpx;
  color: #030303;
  text-align: center;
}

.modal-content {
  padding: 50rpx 32rpx;
}

.modal-input {
  display: flex;
  background: #fff;
  border: 2rpx solid #ddd;
  border-radius: 4rpx;
  font-size: 28rpx;
}


.input {
  width: 100%;
  height: 82rpx;
  font-size: 28rpx;
  line-height: 28rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  color: #333;
}

input-holder {
  color: #666;
  font-size: 28rpx;
}

.modal-footer {
  display: flex;
  flex-direction: row;
  height: 86rpx;
  border-top: 1px solid #dedede;
  font-size: 34rpx;
  line-height: 86rpx;
}

.btn-cancel {
  width: 50%;
  color: #666;
  text-align: center;
  border-right: 1px solid #dedede;
}

.btn-confirm {
  width: 50%;
  color: #ec5300;
  text-align: center;
  position:initial;
  font-size: 16px;
}

.cantSign {
  font-size: 30rpx;
  color: #9a9a9a;
}