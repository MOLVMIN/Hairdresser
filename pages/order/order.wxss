/* pages/order/order.wxss */

html, page, .main-container {
  height: 100%;
  background: #e9e9e9;
}

.main-container {
  padding-top: 120rpx;
}

.main-tab-container, .main-tab {
  display: flex;
  justify-content: center;
  align-items: center;
}


.main-tab-container {
  position: fixed;
  top: 0;
  left: 50%;
  margin-left: -250rpx;
}

.main-tab-bgk {
  background-color: #e9e9e9; 
  height: 120rpx; 
  width: 100%; 
  position: fixed; 
  top: 0; 
  left: 0
}

.main-tab {
  height: 120rpx;
}

.tab-left, .tab-right {
  text-align: center;
  width: 250rpx;
  height: 80rpx;
  line-height: 80rpx;
  background: #fff;
  color: #9a9a9a;
  font-weight: 600;
}

.tab-left-selected, .tab-right-selected {
  text-align: center;
  width: 250rpx;
  height: 80rpx;
  line-height: 80rpx;
  background: #cb9e29;
  color: #000;
  font-weight: 600;
}

.tab-left, .tab-left-selected {
  border-radius: 20rpx 0 0 20rpx;
}

.tab-right, .tab-right-selected {
  border-radius: 0 20rpx 20rpx 0;
}

/*  ongoing  */

.list {
  background: #e9e9e9;
}

.list-item {
  margin: 0rpx 20rpx 20rpx 20rpx;
  background: #fff;
  padding: 20rpx;
}

.item-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.left-content {
  display: flex;
  justify-content: center;
  align-items: center;
}

.number {
  color: #f17728;
  font-weight: bold;
  height: 80rpx;
}

.photo {
  height: 150rpx;
  width: 150rpx;
}

.customer {
  font-size: 27rpx;
  color: #9a9a9a;
  margin-left: 20rpx;
}

.customer view {
  margin: 5rpx 0;
}

.customer_name {
  color: #000;
  font-size: 35rpx;
}

.service {
  margin-left: 20rpx;
  height: 60rpx;
  width: 120rpx;
  line-height: 60rpx;
  text-align: center;
  color: #bf9e4d;
  border: 1rpx solid #bf9e4d;
  border-radius: 8rpx;
  font-size: 36rpx;
}

/*  order_complete  */

.list-item-container {
  background: #fff;
  padding: 0rpx 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 80rpx;
}

.list-item-container view {
  color: #bebebe;
  font-size: 30rpx;
}

.master {
  display: flex;
  justify-content: center;
  align-items: center;
}

.master image {
  width: 50rpx;
  height: 50rpx;
}

.master text {
  color: #000;
  font-weight: bold;
  font-size: 35rpx;
  margin-left: 20rpx;
}

.complete-item-container {
  background: #fff;
  padding: 15rpx 30rpx 15rpx 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.complete-item-container view {
  color: #bebebe;
  font-size: 30rpx;
}

.complete-item-container-OldMoney {
  text-decoration: line-through;
}

.subtotal-container {
  background: #fff;
  padding: 10rpx 30rpx 25rpx 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.balance-left {
  font-weight: bold;
}

.balance-right {
  background: #fff;
  display: flex;
  align-items: center;
}

.balance-text {
  color: #f17728;
  font-weight: bold;
}

.comlete-select-container {
  background: #fff;
  padding: 25rpx 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.cancle-btn {
  margin-left: 20rpx;
  height: 60rpx;
  width: 120rpx;
  line-height: 60rpx;
  text-align: center;
  color: #bf9e4d;
  border: 1rpx solid #bf9e4d;
  border-radius: 8rpx;
  font-size: 36rpx;
}

.smallestLine {
  height: 5rpx;
  background: #e9e9e9;
}

.itemSpaceLine {
  height: 20rpx;
  background: #e9e9e9;
}



.show-btn {
  margin-top: 100rpx;
  color: #22cc22;
}

.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}

.modal-dialog {
  width: 540rpx;
  overflow: hidden;
  position: fixed;
  top: 50%;
  left: 0;
  z-index: 9999;
  background: #f9f9f9;
  margin: -180rpx 105rpx;
  border-radius: 36rpx;
}

.modal-title {
  padding-top: 50rpx;
  font-size: 36rpx;
  color: #030303;
  text-align: center;
}

.modal-content {
  padding: 50rpx 32rpx;
}

.modal-input {
  display: flex;
  background: #fff;
  border: 2rpx solid #ddd;
  border-radius: 4rpx;
  font-size: 28rpx;
}


.input {
  width: 100%;
  height: 82rpx;
  font-size: 28rpx;
  line-height: 28rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  color: #333;
}

input-holder {
  color: #666;
  font-size: 28rpx;
}

.modal-footer {
  display: flex;
  flex-direction: row;
  height: 86rpx;
  border-top: 1px solid #dedede;
  font-size: 34rpx;
  line-height: 86rpx;
}

.btn-cancel {
  width: 50%;
  color: #666;
  text-align: center;
  border-right: 1px solid #dedede;
}

.btn-confirm {
  width: 50%;
  color: #ec5300;
  text-align: center;
}